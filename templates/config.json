{
  "$schema": "https://raw.githubusercontent.com/crossbario/crossbar/master/crossbar.json",
  "version": 2,
  "controller": {},
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "realm1",
          "roles": [
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                }
              ]
            }
          ]
        },
        {
          "name": "realm2",
          "roles": [
            {
              "name": "jdoe",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8080
          },
          "paths": {
            "/": {
              "type": "static",
              "directory": "../web"
            }
          }
        },
        {
          "type": "universal",
          "endpoint": {
            "type": "tcp",
            "port": 8443,
            "tls": {
              "key": "/node/ssl/privkey.pem",
              "certificate": "/node/ssl/cert.pem",
              "chain_certificates": [
                "/node/ssl/chain.pem"
              ]
            }
          },
          "rawsocket": {},
          "websocket": {
            "ws": {
              "type": "websocket",
              "auth": {
                "anonymous": {
                  "type": "static",
                  "role": "anonymous"
                },
                "ticket": {
                  "type": "static",
                  "principals": {
                    "jdoe": {
                      "role": "jdoe",
                      "ticket": "letmein"
                    }
                  }
                }
              },
              "url": "wss://{{ server_hostname }}:443/ws"
            }
          },
          "web": {
            "paths": {
              "/": {
                "type": "static",
                "directory": "../web"
              },
              "info": {
                "type": "nodeinfo"
              }
            }
          }
        }
      ]
    }
  ]
}